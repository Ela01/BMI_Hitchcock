<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_calculate_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-condensed"
            android:text="Calculate Your Target"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/radio_group_gender_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_calculate_target"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobutton_imperial_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imperial" />

            <RadioButton
                android:id="@+id/radiobutton_metric_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metric" />

            <RadioButton
                android:id="@+id/radiobutton_female_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female" />

            <RadioButton
                android:id="@+id/radiobutton_male_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/edit_text_feet_inches_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group_gender_measurement"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/edit_text_feet_meters_target"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="8dp"
                android:hint="feet/meters"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edit_text_inches_cm_target"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="8dp"
                android:hint="inches/cm"
                android:inputType="number" />

            <EditText
                android:id="@+id/edit_text_weight_target"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:hint="weight"
                android:layout_marginRight="8dp"
                android:inputType="number" />

            <EditText
                android:id="@+id/edit_text_age_target"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:hint="age"
                android:inputType="number" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_group_activity_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_feet_inches_weight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_button_sedentary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Sedentary/Light exercise" />

            <RadioButton
                android:id="@+id/radio_button_slightly_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Slightly Active" />

            <RadioButton
                android:id="@+id/radio_button_moderately_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moderately Active" />

            <RadioButton
                android:id="@+id/radio_button_very_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Very Active" />

            <RadioButton
                android:id="@+id/radio_button_extremely_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extremely Active" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/Layout_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group_activity_measurement"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/edit_text_expected_weight_loss"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="8dp"
                android:hint="anticipated loss"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edit_text_time_to_achieve_loss"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="8dp"
                android:hint="days to achieve loss"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

            <Button
                android:id="@+id/button_estimate_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Estimate Target"
                android:textAlignment="center"
                android:layout_below="@+id/Layout_target"/>

        <TextView
            android:id="@+id/text_view_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_estimate_target"

            android:layout_marginTop="24dp"

            android:layout_centerHorizontal="true"
            android:text="Awaiting data input... " />





    </RelativeLayout>
</ScrollView>

